{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false
  },
  "include": [
    "components/**/*",
    "hooks/**/*",
    "types.ts",
    "index.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "App.tsx",
    "index.tsx"
  ]
}
