{
  "name": "hotmic-virtualizer",
  "version": "1.0.5",
  "description": "A high-fidelity WebGL microphone visualization using concentric time-delayed waveforms",
  "type": "module",
  "main": "./dist/hotmic-virtualizer.umd.js",
  "module": "./dist/hotmic-virtualizer.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/hotmic-virtualizer.js",
      "require": "./dist/hotmic-virtualizer.umd.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "vite build --config vite.config.lib.ts",
    "build:demo": "vite build",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "peerDependencies": {
    "@react-three/fiber": ">=8.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "three": ">=0.150.0"
  },
  "dependencies": {
    "lucide-react": "^0.555.0"
  },
  "devDependencies": {
    "@react-three/fiber": "^9.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@vitejs/plugin-react": "^5.0.0",
    "happy-dom": "^20.0.11",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "three": "^0.181.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^4.0.14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohsen1/hotmic-virtualizer.git"
  },
  "keywords": [
    "microphone",
    "visualizer",
    "webgl",
    "three.js",
    "react",
    "audio",
    "waveform"
  ],
  "author": "Mohsen Azimi",
  "license": "MIT"
}
